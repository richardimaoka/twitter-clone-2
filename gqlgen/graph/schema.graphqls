# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Time

type Tweet {
  tweetId: ID
  userName: String
  userId: String
  profilePicture: String
  body: String
  picturePath: String
  pictureWidth: Int
  pictureHeight: Int
  timeStamp: Time
  time: String
  date: String
  retweets: Int
  quotes: Int
  likes: Int
  bookmarks: Int
  replies: [Tweet]
  impressions: Int
}

type Query {
  tweet: Tweet
  timeline(currentTime: Time!): [Tweet!]
}

type Mutation {
  postTweet(body: String!): Tweet
  like(tweetId: ID!): Tweet
}
